<Window x:Class="_4_12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <Label Content="Imie" Margin="0,0,10,0" Width="130"/>
            <TextBox Text="{Binding Firstname, UpdateSourceTrigger=PropertyChanged}" Width="150" Margin="10,0,0,0"/>
            <Label Content="Nazwisko" Margin="0,0,10,0" Width="130"/>
            <TextBox Text="{Binding Lastname, UpdateSourceTrigger=PropertyChanged}" Width="150" Margin="10,0,0,0"/>
            <!--<Button Command="{Binding ReadNamesCommand}"/>-->
            <Label Content="{Binding Fullname}"/>
        </StackPanel>
    </Grid>
</Window>
