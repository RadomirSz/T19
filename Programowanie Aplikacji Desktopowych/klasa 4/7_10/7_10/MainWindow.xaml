<Window x:Class="_7_10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_7_10"
        mc:Ignorable="d"
        Title="MainWindow" Height="371" Width="650">
    <Grid Margin="0,0,45,45">

        <Label Content="Simple WPF Control" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>

        <GroupBox Header="Form" Width="580" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Height" Value="25"/>
                    </Style>
                </Grid.Resources>
                <Label Content="Name" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Grid.ColumnSpan="2"/>
                <Label Content="Street Address" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Grid.ColumnSpan="2"/>
                <Label Content="City" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Margin="5"/>
                <Label Content="State" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="5" FontSize="20"/>
                <TextBox Grid.Row="2" Grid.Column="3" Margin="5" Width="75" HorizontalAlignment="Right"/>
                <Label Content="Zip" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="3" Grid.Column="1" Margin="5" />
            </Grid>
        </GroupBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,270,0,0">
            <Button Content="OK" Width="75" Margin="5"/>
            <Button Content="Cancel" Width="75" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
