<Window x:Class="zadanieLayout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zadanieLayout"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Background="LightBlue">
            <Grid Margin="0 40 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Image Grid.Column="0" Grid.Row="0" Source="obrazek.png" Stretch="Uniform" Margin="10"/>
                
                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" Margin="10">
                    <Button Content="OK" Width="75" Margin="0 20 0 0"/>
                    <Button Content="Anuluj" Width="75" Margin="0 20 0 0"/>
                </StackPanel>

            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Background="LightGreen" Orientation="Vertical" >
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0 30 0 0"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Width" Value="100" />
                </Style>
            </StackPanel.Resources>

            <Button Content="guzik1"/>
            <Button Content="guzik2"/>
            <Button Content="guzik3"/>
        </StackPanel>
        


    </Grid>
</Window>
