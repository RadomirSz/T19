<Window x:Class="_16_09.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16_09"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Margin="20 20">
                <CheckBox Content="Write to a log file" Margin="0 0 0 3"/>
                <CheckBox Content="Send log via email" Margin="0 0 0 3"/>
                <CheckBox Content="Use event log"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Orientation="Vertical" HorizontalAlignment="Right" Margin="0 10 100 0">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <Label Content="Select an email address: "/>
                    <ComboBox Width="200">
                        <ComboBoxItem Content="Item1"/>
                        <ComboBoxItem Content="Item2"/>
                        <ComboBoxItem Content="Item3"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Cumstom addresses: "/>
                    <TextBox Width="200"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
        <Separator Margin="20 80 20 20" Height="2" Background="Black" VerticalAlignment="Top"/>
        <TabPanel Height="230" Margin="20 0 20 0">
            <TabControl>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="Tab 1"/>
                    </TabItem.Header>
                    <TextBlock Text="Content of Tab 1" Width="800" Height="300"/>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="Tab 2"/>
                    </TabItem.Header>
                    <TextBlock Text="Content of Tab 2" Width="800" Height="300"/>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="Tab 3"/>
                    </TabItem.Header>
                    <TextBlock Text="Content of Tab 3" Width="800" Height="300"/>
                </TabItem>
            </TabControl>
        </TabPanel>

    </Grid>
</Window>
