<Window x:Class="lekcja911.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lekcja911"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <ListBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="600" Height="410" Margin="20,10,20,10">
            <ListBoxItem Content="Item 1"/>
            <ListBoxItem Content="Item 2"/>
            <ListBoxItem Content="Item 3"/>
            <ListBoxItem Content="Item 4"/>
            <ListBoxItem Content="Item 5"/>
        </ListBox>

        
        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,6,0">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="Width" Value="120"/>
                    <Setter Property="Height" Value="28"/>
                    <Setter Property="FontSize" Value="15"/>
                </Style>
            </StackPanel.Resources>
            <Label Content="ListBox selection" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
            <Button Content="Show selected"/>
            <Button Content="Select last"/>
            <Button Content="Select next"/>
            <Button Content="Select c#"/>
            <Button Content="Select all"/>
        </StackPanel>
        
    </Grid>
</Window>
