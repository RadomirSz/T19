<Window x:Class="_1_12_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:_1_12_MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- 
    <Window.DataContext>
        <vm:ViewModel1 />
    </Window.DataContext>
    -->

    <Window.DataContext>
        <vm:ToDoListViewModel />
    </Window.DataContext>
    <Grid>
        <!-- 
        <TextBlock Text="{Binding Counter}" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            FontSize="24"/>
        <Button Content="Increase" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,243,0,0" Width="100" Height="30" Command="{Binding IncrementCounterCommand}"/>
        <Button Content="Decrement" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,294,0,0" Width="100" Height="30" Command="{Binding DecrementCounterCommand}"/>
        -->

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Text="{Binding NewText}" Width="100"/>
            <Button
                Content="Dodaj"
                Command="{Binding AddToDoItemCommand}" />

            <Button Content="Wyczyść" Command="{Binding RemoveTodosCommand}" />

        </StackPanel>
        <ListBox ItemsSource="{Binding todoItems}" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}" Width="200"/>
                        <Button 
                            Content="Usuń" /> <!-- do dokończenia-->
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>



    </Grid>
</Window>
