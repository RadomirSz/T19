<Window x:Class="_11_12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_11_12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:ShopViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Panel Zarządzania Sklepem" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Grid.ColumnSpan="2" Grid.Row="0" Grid.Column="0" />

        <ListBox ItemsSource="{Binding Customers}" Grid.Row="1" Grid.Column="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical"> <!-- TODO wyglad-->
                        
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding FirstName}"/>
                            <Label Content="{Binding LastName}"/>
                        </StackPanel>

                        <Label Content="{Binding OrderCount}"/>
                        <Label Content="{Binding TotalSpent}"/>
                        <Label Content="{Binding IsPremium}"/>
                    </StackPanel>

                </DataTemplate>
            </ListBox.ItemTemplate>     
        </ListBox>
        
        <ListBox ItemsSource="{Binding Products}" Grid.Row="1" Grid.Column="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Label Content="{Binding CustomerCount}" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"/>
        <Label Content="{Binding WareHouseValue}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center"/>
    </Grid>
</Window>
